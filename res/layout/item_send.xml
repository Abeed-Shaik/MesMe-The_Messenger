<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="62dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="8dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/sent_drawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp">
        <LinearLayout
            android:id="@+id/linearLayoutqt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_sent_qt"
            android:visibility="gone">
            <TextView
                android:id="@+id/messageqtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="33dp"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:textStyle="normal"
                android:visibility="visible" />
            <TextView
                android:id="@+id/messageqt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="50dp"
                android:paddingStart="12dp"
                android:paddingBottom="8dp"
                android:paddingEnd="8dp"
                android:textColor="#667977"
                android:textSize="16sp"
                android:textStyle="normal"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="9dp"
            android:paddingTop="9dp"
            android:paddingEnd="9dp"
            android:paddingBottom="4dp"
            android:text="Message"
            android:textColor="#E6000000"
            android:textSize="16sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/messagetm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="9dp"
            android:paddingEnd="33dp"
            android:paddingBottom="4dp"
            android:layout_gravity="end"
            android:textColor="#757575"
            android:textSize="12sp"
            android:visibility="visible" />


    </LinearLayout>

    <ImageView
        android:id="@+id/heartSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_heart_red" />

    <ImageView
        android:id="@+id/heartSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_heart_green" />

</androidx.constraintlayout.widget.ConstraintLayout>