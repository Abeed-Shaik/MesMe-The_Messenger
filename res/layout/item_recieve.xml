<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="62dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recieve_drawable"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/linearLayoutqt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_receive_qt"
            android:visibility="gone">
            <TextView
                android:id="@+id/messageqtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="33dp"
                android:paddingStart="12dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:textStyle="normal"
                android:visibility="visible" />
            <TextView
                android:id="@+id/messageqt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="50dp"
                android:paddingStart="12dp"
                android:paddingBottom="8dp"
                android:paddingEnd="8dp"
                android:textColor="#677780"
                android:textSize="16sp"
                android:textStyle="normal"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="9dp"
            android:paddingTop="9dp"
            android:paddingEnd="9dp"
            android:paddingBottom="4dp"
            android:text="Message"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/messagetm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            android:paddingBottom="4dp"
            android:text="03/12/2001"
            android:textColor="#757575"
            android:textSize="12sp"
            android:visibility="visible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>